<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logotipo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"

            android:src="@drawable/unnamed" />

        <!-- Botão Certidões -->
        <Button
            android:id="@+id/btnCertidoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certidões"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

        <!-- Botão Currículo -->
        <Button
            android:id="@+id/btnCurriculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currículo"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

        <!-- Botão Balcão de Empregos -->
        <Button
            android:id="@+id/btnBalcaoEmpregos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balcão de Empregos"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

        <!-- Botão RG -->
        <Button
            android:id="@+id/btnRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RG"
            android:backgroundTint="#00BCD4"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

        <!-- Botão Central de Documentos Perdidos -->
        <Button
            android:id="@+id/btnDocumentosPerdidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documentos Perdidos"
            android:backgroundTint="#E91E63"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

        <!-- Botão Voltar (corrigido) -->
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
